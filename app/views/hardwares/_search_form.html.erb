<%= simple_form_for :hardware, :url => search_hardwares_path, :method => :get do |f| %>
    <%= f.error_notification %>
    <%= f.input :hardware,
                :collection => Hardware.all,
                :label => false,
                :wrapper_html => { :class => 'pull-left mrx' },
                :input_html => {:"data-placeholder" => "Find hardware"} %>

    <%= f.input :query,
                :label => false,
                :wrapper_html => { :class => 'pull-left mrx' },
                :placeholder => 'Search for hardware'%>
    <%= f.submit 'Search', :class => 'btn pull-left mrx' %>
<% end %>
