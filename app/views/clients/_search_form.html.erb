<%= simple_form_for :client, :url => search_clients_path, :method => :get do |f| %>
    <%= f.error_notification %>
    <%= f.input :query,
                :label => false,
                :placeholder => 'Search for client'%>
    <%= f.input :client,
                :collection => Client.all,
                :label => false,
                :input_html => {:"data-placeholder" => "Choose a client"} %>
    <%= f.submit 'Search', :class => 'btn btn-primary neg-margin' %>
<% end %>
