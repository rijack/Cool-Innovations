<%= simple_form_for :client, :url => search_clients_path, :method => :get do |f| %>
    <%= f.error_notification %>

    <%= f.input :query,
                :label => false,
                :wrapper_html => { :class => 'pull-left mrx' },
                :placeholder => 'Search for client'%>
    <%= f.submit 'Search', :class => 'btn pull-left mrx' %>
    <%= link_to 'New Client', "#modal_container", :class => 'btn btn-primary pull-right mrx', :"data-toggle" => "modal" %>
<% end %>
