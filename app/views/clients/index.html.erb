<h1>Listing clients</h1>

<%= render 'search_form' %>

<% if @clients.length > 0 %>



    <table class="table table-striped">
      <tr>
        <th>Client Name</th>
        <th class="actions">&nbsp;</th>
      </tr>

    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.name, edit_client_path(client)%></td>
        <td class="actions">
          <%= link_to 'Edit', edit_client_path(client), :class => 'btn btn-mini' %>
          <%= link_to 'Delete', client, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
    </table>

    <%= will_paginate @collection, :renderer => BootstrapPagination::Rails %>
<% else %>
    <p>There are no results</p>
<% end %>


