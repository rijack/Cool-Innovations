<h1>Shipping Methods</h1>

<%= render 'search_form' %>
<%= link_to 'New Shipping Method', "/shipping_methods/new?no_layout=1", :class => 'btn btn-primary pull-right mrx modal-trigger'%>


<% if @shipping_methods.length > 0 %>

    <% if params.fetch(:shipping_method, {})[:query].present? %>
        <div class="row">
          <div class="span9 mbxx">
            your search for <em><strong>"<%= params[:shipping_method][:query] %>"</strong></em>  returned <strong><%= pluralize(@shipping_methods.count, 'result') %></strong>
          </div>
        </div>
    <% end %>

    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Shipping Method Name</th>
        <th>Duration (in days)</th>
        <th>&nbsp;</th>
      </tr>
      </thead>
      <tbody>
      <% @shipping_methods.each do |shipping_method| %>
          <tr>
            <td class="editable large3" headers="/shipping_methods/update_shipping_method"  id="name-<%= shipping_method.id %>"><%= shipping_method.name %></td>
            <td class="editable large3" headers="/shipping_methods/update_shipping_method"  id="duration-<%= shipping_method.id %>"><%= shipping_method.duration %></td>
            <td class="actions">
              <%= link_to shipping_method, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger', :title => 'Delete' do%>
                  <i class="icon-trash" alt="delete"></i>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= will_paginate @shipping_methods, :renderer => BootstrapPagination::Rails %>
<% else %>
    <div class="row">
      <div class="span9 mbxx">
        There are no results
      </div>
    </div>
<% end %>