<%= simple_form_for(@sample_line, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :comment_id %>
    <%= f.input :part_id %>
    <%= f.input :quantity %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', sample_lines_path, :class => 'btn' %>
  </div>
<% end %>
