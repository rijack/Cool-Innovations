<h1>Log In</h1>

<%= simple_form_for(:user, :url => sessions_path, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :password %>
  </div>

  <div class="form-actions">
    <%= f.submit "Login", :class => 'btn btn-primary' %>
  </div>
<% end %>
