<h1>Part Processes</h1>


<%= link_to 'New Process', "/part_processes/new?no_layout=1", :class => 'btn btn-primary pull-right mrx mbxx modal-trigger'%>

<table class="table table-striped">
  <thead>
      <tr>
        <th>Process Name</th>
        <th>Process Description</th>
        <th class="actions">&nbsp;</th>
      </tr>
  </thead>
  <tbody>
  <% @part_processes.each do |part_process| %>
      <tr>
        <td><%= link_to part_process.name, edit_part_process_path(part_process)%></td>
        <td><%= part_process.description %></td>
        <td class="actions">
          <%= link_to 'Edit', edit_part_process_path(part_process)+"?no_layout=1", :class => 'btn btn-small modal-trigger'%>
          <%= link_to 'Delete', part_process, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>