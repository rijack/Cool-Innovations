<%= simple_form_for(@part_process, :remote => true, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="modal-body">
    <%= f.association :part_process_category, :label => "Category", :collection => PartProcessCategory.order("LOWER(name)").all,
                      :input_html => {:"data-placeholder" => "Choose a category"} %>
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Cancel</a>
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>



