<h1>Listing parts</h1>

<table class="table table-striped">
  <tr>
    <th>Drawing number</th>
    <th>Part number</th>
    <th>Name</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.drawing_number %></td>
    <td><%= part.part_number %></td>
    <td><%= part.name %></td>
    <td><%= part.description %></td>
    <td>
      <%= link_to 'Show', part, :class => 'btn btn-mini' %>
      <%= link_to 'Edit', edit_part_path(part), :class => 'btn btn-mini' %>
      <%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Part', new_part_path, :class => 'btn btn-primary' %>
