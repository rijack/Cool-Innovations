<tr class="nested-fields">
  <td class="req-hardware"><%= f.association :hardware, :collection => Hardware.order(:name).all, :label=>false,
      :input_html => {:"data-placeholder" => "Choose hardware", :class => "parts-hardware"} %></td>

  <td class="hardware-qty"><%= f.input :quantity,:label => false, :input_html => {:class => "input-small pull-left"} %></td>
  <td class="hardware-remove">
    <%= link_to_remove_association  f, :class => "btn btn-small btn-danger", :title => "Remove Line" do%>
        <i class="icon-trash" alt="edit"></i>
    <% end %>
  </td>
</tr>

