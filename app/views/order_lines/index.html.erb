<h1>Listing order_lines</h1>

<table class="table table-striped">
  <tr>
    <th>Order</th>
    <th>Part</th>
    <th>Due date</th>
    <th>Quantity</th>
    <th>Actions</th>
  </tr>

<% @order_lines.each do |order_line| %>
  <tr>
    <td><%= order_line.order_id %></td>
    <td><%= order_line.part_id %></td>
    <td><%= order_line.due_date %></td>
    <td><%= order_line.quantity %></td>
    <td>
      <%= link_to 'Show', order_line, :class => 'btn btn-mini' %>
      <%= link_to 'Edit', edit_order_line_path(order_line), :class => 'btn btn-mini' %>
      <%= link_to 'Destroy', order_line, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order line', new_order_line_path, :class => 'btn btn-primary' %>
