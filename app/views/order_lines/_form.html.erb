<%= simple_form_for(@order_line, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :order_id %>
    <%= f.input :part_id %>
    <%= f.input :due_date %>
    <%= f.input :quantity %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', order_lines_path, :class => 'btn' %>
  </div>
<% end %>
