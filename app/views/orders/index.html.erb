<% if params["display"] == "shipped" %>
    <h1>Shipped Order Lines</h1>
<% else %>
    <h1>Order Lines</h1>
<% end %>


<% if params["shipped"] %>
    <div class="alert alert-success">
      <a class="close" data-dismiss="alert">Ã—</a>
      order lines shipped successfully.  Click <a href="">Shipped Orders</a> to view
    </div>

<% end %>

<%= render 'order_line_search' %>

<%= link_to 'Ship Orders', "#", :class => 'btn btn-success pull-right mls mrx ship-orders' %>
<%= link_to 'New Order', new_order_path, :class => 'btn btn-primary pull-right mrx' %>


<table class="table">
  <thead>
    <tr>
      <th><%= sortable "clients.name", "Customer" %></th>
      <th><%= sortable "order_id", "P/O Number" %></th>
      <th>Part Number</th>
      <th>Quantity</th>
      <th><%= sortable "due_date" %></th>
      <th>Comment</th>
      <th>Production Comment</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <% if @order_lines.length > 0 %>
        <%= render :partial => 'order_lines/order_line', :collection => @order_lines, :locals => { :show_client => true } %>
      <% else %>
        <%= render :partial => 'order_lines/no_orders', :locals => { :show_client => true } %>
      <% end %>
  </tbody>
</table>

<%= will_paginate @order_lines, :renderer => BootstrapPagination::Rails %>

<br />


