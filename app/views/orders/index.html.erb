<% if params["display"] == "shipped" %>
    <h1>Shipped Order Lines</h1>
<% else %>
    <h1>Order Lines</h1>
<% end %>

<% param = '' %>
<% if params["shipped"] %>
    <% param = 'shipped' %>
<% end %>
<% if params["reset"] %>
    <% param = 'reset' %>
<% end %>

<% if param != "" %>
    <div class="alert alert-success">
      <a class="close" data-dismiss="alert">Ã—</a>
      <% if param == "shipped" %>
        order lines shipped successfully.  Click <%= link_to 'Shipped Orders', shipped_orders_url %> to view
      <% else %>
        order line has been reset
      <% end %>
    </div>

<% end %>

<%= render 'order_line_search' %>

<% if params["display"] != "shipped" %>
    <%= link_to 'Ship Orders', "#", :class => 'ship-orders btn btn-success pull-right mls mrx ' %>
    <%= link_to 'New Order', new_order_path, :class => 'btn btn-primary pull-right mrx' %>
<% end %>




<table class="table table-bordered">
  <thead>
    <tr>
      <% if params["display"] != "shipped" %>
          <th class="fixed"><%= sortable "created_at" %></th>
      <% end %>
      <th><%= sortable "clients.name", "Customer" %></th>
      <th class="fixed"><%= sortable "order_id", "P/O Number" %></th>
      <th>Line</th>
      <th class="fixed"><%= sortable "parts.part_number", "Part #" %></th>
      <th class="fixed"><%= sortable "quantity", "Qty" %></th>
      <th class="fixed"><%= sortable "due_date" %></th>
      <% if params["display"] != "shipped" %>
        <th class="fixed"><%= sortable "ship_date" %></th>
      <% else %>
          <th class="fixed"><%= sortable "actual_ship_date" %></th>
      <% end %>
      <th>Comment</th>
      <% if params["display"] != "shipped" %>
        <th>Prod Comment</th>
      <% else %>
          <th>Tracking #</th>
      <% end %>
      <th class="dropdown">
        <% if params["display"] != "shipped" %>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#colorChange">
              Change color
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% OrderLine::COLORS.each do |order_line_color| %>
                  <li><a href="#" class="change-color"><%= order_line_color %></a></li>
              <% end %>
            </ul>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
      <% if @order_lines.length > 0 %>
        <%= render :partial => 'order_lines/order_line', :collection => @order_lines, :locals => { :show_client => true } %>
      <% else %>
        <%= render :partial => 'order_lines/no_orders', :locals => { :show_client => true } %>
      <% end %>
  </tbody>
</table>

<%= will_paginate @order_lines, :renderer => BootstrapPagination::Rails %>

<br />


