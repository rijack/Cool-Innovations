<tr class="nested-fields">
  <td><%= f.association :part, :label =>false, :collection => Part.order(:part_number).all, :input_html => {:"data-placeholder" => "Part #", :class => "span2"} %></td>
  <td class="due-date-cell"><%= f.input :due_date, :label =>false, :as => :string,:input_html => {:class => "due-date input-small"} %></td>
  <td class="shipping-method-cell"><%= f.association :shipping_method, :label =>false, :collection => ShippingMethod.order(:name).collect{|x| [x.name , x.duration]}, :input_html => {:"data-placeholder" => "Shipping method", :class => "span2 shipping-method"} %></td>
  <td class="ship-date-cell"><%= f.input :ship_date, :label =>false, :as => :string,:input_html => {:class => "ship-date input-small"} %></td>
  <td><%= f.input :quantity, :label =>false,:input_html => {:class => "span1"} %></td>
  <td><%= f.input :comment, :label =>false,:input_html => {:class => "span2"} %></td>
  <td><%= f.input :production_comment, :label =>false,:input_html => {:class => "span2"} %></td>
  <td><%= f.input :price, :label =>false,:input_html => {:class => "span1"} %></td>
  <td>
    <%= link_to_remove_association  f, :class => "btn btn-small btn-danger", :title => "Remove Line" do%>
        <i class="icon-trash" alt="edit"></i>
    <% end %>
  </td>
</tr>

