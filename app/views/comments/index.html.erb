<div class="row">
  <div class="span7">
    <h2>Comments <%= link_to 'New Sample', "/comments/new?sample=true&no_layout=1", :class => 'btn btn-small btn-primary pull-right mrx mbxx modal-trigger'%> <%= link_to 'New Comment', "/comments/new?no_layout=1", :class => 'btn btn-small btn-primary pull-right mrx mbxx modal-trigger'%></h2>
    <% @comments.each do |comment| %>
        <div class="comment-container" data-id="<%= comment.id %>">
          <div class="row">
            <div class="span1">
              <% if comment.user.avatar? %>
                  <%= image_tag comment.user.avatar.url(:medium) %>
              <% else %>
                  <%= image_tag "silhouette.png" %>
              <% end %>
              <span class="actions">
                  <% extra_param = "" %>
                  <% if comment.sample_lines.length >0 %>
                    <% extra_param = "&sample=true" %>
                  <% end %>
                  <% if comment.user.id == current_user.id %>
                      <%= link_to edit_comment_path(comment)+"?no_layout=1"+extra_param, :class => 'edit modal-trigger', :title => 'Edit' do%>
                          <i class="icon-edit"></i>
                      <% end %>
                  <% end %>
                  <% if comment.user.id == current_user.id or current_user.admin?  %>
                      <%= link_to comment, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'delete', :title => 'Delete' do%>
                          <i class="icon-trash" alt="delete"></i>
                      <% end %>
                  <% end %>
              </span>
            </div>
            <div class="span6 comment-details">
              <div class="username"><%= comment.user.name %></div>
              <div class="date"><em><%= comment.created_at.to_formatted_s(:long) %></em></div>
              <div class="message">
                <% if comment.sample_lines.length >0 %>
                    Sample for: <strong><%= comment.customer_name %></strong>
                    <% if comment.contact_name? %><br />Contact Name:<strong><%= comment.contact_name %></strong><% end %>
                    <table class="table table-bordered table-condensed table-striped mtx">
                      <thead>
                        <tr>
                          <th>Part #</th>
                          <th>New Part #</th>
                          <th>Quantity</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% comment.sample_lines.each do |sample_line| %>
                            <tr>
                              <td class="comment"><% if sample_line.part_id? %><%= sample_line.part.name %><% end %></td>
                              <td class="comment"><%= sample_line.new_part_number %></td>
                              <td><%= sample_line.quantity %></td>
                            </tr>
                        <% end %>
                      </tbody>
                    </table>
                    <% if comment.address? or comment.shipping_account_info? or comment.comment? %>
                        <table class="table table-bordered table-condensed">
                          <% if comment.address? %>
                          <tr>
                            <td class="small"><strong>Address:</strong></td>
                            <td><%= simple_format comment.address %></td>
                          </tr>
                          <% end %>
                          <% if comment.shipping_account_info? %>
                          <tr>
                            <td><strong>Shipping Info:</strong></td>
                            <td><%= simple_format comment.shipping_account_info %></td>
                          </tr>
                          <% end %>
                          <% if comment.comment? %>
                          <tr>
                            <td><strong>Comment:</strong></td>
                            <td><%= simple_format comment.comment %></td>
                          </tr>
                          <% end %>
                        </table>
                    <% end %>
                <% else %>
                    <%= simple_format comment.message %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <div class="span5 scroll">
    <h2>Upcoming Orders</h2>
    <table class="table table-bordered table-condensed">
      <thead>
        <th>P/O #</th>
        <th>Customer</th>
        <th>Part #</th>
        <th>Qty</th>
        <th>Ship Date</th>
      </thead>
      <tbody>
        <% @order_lines.each do |order_line| %>
            <tr class="<%= order_line.color %>">
              <td><%= order_line.order.purchase_order %></td>
              <td><%= order_line.order.client.name %></td>
              <td><%= order_line.part.name %></td>
              <td><%= number_with_delimiter(order_line.quantity) %></td>
              <td><%= order_line.ship_date %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'View All', orders_path%>
  </div>

</div>





