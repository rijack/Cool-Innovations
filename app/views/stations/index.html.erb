<h1>Stations</h1>

<%= link_to 'New Station', new_station_path, :class => 'btn btn-primary pull-right mbxx' %>

<table class="table table-bordered">
  <thead>
  <tr>
    <th><%= sortable "created_at" %></th>
    <th><%= sortable "name" %></th>
    <th>Location</th>
    <th>Notes</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @stations.each do |station| %>
      <tr>
        <td><%= display_date(station.created_at.to_date()) %></td>
        <td><%= station.name %></td>
        <td><%= station.location %></td>
        <td><%= station.notes %></td>
        <td class="actions">
          <%= link_to station, :class => 'btn btn-small btn-info', :title => 'Show' do%>
              <i class="icon-folder-open"></i>
          <% end %>
          <%= link_to station, method: :delete, data: { confirm: "Are you sure you want to delete this part? \n" + station.name }, :class => 'btn btn-small btn-danger', :title => 'Delete' do%>
              <i class="icon-trash" alt="delete"></i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>






